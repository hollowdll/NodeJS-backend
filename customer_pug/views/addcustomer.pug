doctype html
html
  head
    title Add customer
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    )
  body
    div.container
      a(href="/").btn.btn-secondary Back
      h1 New customer
      form(action="addcustomer", method="POST")
        div.mb-3
          input(type="text", name="firstName", placeholder="First name" required).form-control
        div.mb-3
          input(type="text", name="lastName", placeholder="Last name" required).form-control
        div.mb-3
          input(type="text" name="email" placeholder="Email" required).form-control
        div.mb-3
          input(type="text" name="phone" placeholder="Phone" required).form-control
        div
          input(type="submit" value="Add").btn.btn-primary
      